@subsubsection Trimmed-curve

@b{Description}

Creates a curve based on an existing curve but possibly with new start and end parameters (@i{u1} and @i{u2}).

@noindent @b{Required-input-slots}

@b{:built-from}

@itemize {}

 @item GDL Curve Object. The underlying curve from which to build this curve.

@end itemize

@noindent @b{Optional-input-slots}

@b{:u1}

@itemize {}

 @item Number. Specified start parameter. Defaults to the u1 of the built-from.

@end itemize

@b{:u2}

@itemize {}

 @item Number. Specified end parameter. Defaults to the u2 of the built-from.

@end itemize

@noindent @b{Computed-slots}

@b{:basis}

@itemize {}

 @item GDL Curve. The original untrimmed curve, same as the built-from.

@end itemize

@noindent @b{Examples}

@smallexample 
@cartouche
  
 (in-package :surf)

 (define-object test-trimmed-curve ()

   :objects
   ((b-spline-curve :type 'b-spline-curve
                     :control-points (list (make-point 0 0 0)
                                           (make-point 2 3.0 0.0) 
                                           (make-point 4 2.0 0.0) 
                                           (make-point 5 0.0 0.0) 
                                           (make-point 4 -2.0 0.0) 
                                           (make-point 2 -3.0 0.0) 
                                           (make-point 0 0 0)))
    
    (trimmed-curve :type 'trimmed-curve
                   :built-from (the b-spline-curve)
                   :u1 0.2
                   :u2 0.8
                   :display-controls (list :color :red :line-thickness 1.5))))

 (generate-sample-drawing :object-roots (make-object 'test-trimmed-curve))

   @end cartouche 
@end smallexample



