@subsubsection Horizontal-dimension

@b{Description}

Creates a dimension annotation along the horizontal axis.

@noindent @b{Optional-input-slots}

@b{:dim-text-start}

@itemize {}

 @item 3D Point. Determines where the text will start. Defaults to reasonable location for 
horizontal-dimension.

@end itemize

@noindent @b{Computed-slots}

@b{:base-plane-normal}

@itemize {}

 @item Must be specified in the subclass except for angular

@end itemize

@b{:leader-direction-1-vector}

@itemize {}

 @item Must be specified in the subclass except for angular

@end itemize

@b{:leader-direction-2-vector}

@itemize {}

 @item Must be specified in the subclass except for angular

@end itemize

@b{:witness-direction-vector}

@itemize {}

 @item Must be specified in the subclass except for angular

@end itemize

@noindent @b{Examples}

@smallexample 
@cartouche          
 (in-package :gdl-user)

 (define-object  box-view (base-object)
   
   :objects
   ((box :type 'box
         :length 10 :width (* (the-child length) +phi+)
         :height (* (the-child :width) +phi+))
   
    (width-dimension :type 'horizontal-dimension
                     :character-size (/ (the box length) 20)
                     :arrowhead-width (/ (the-child character-size) 3)
                     :start-point (the box (vertex :top :left :rear))
                     :end-point (the box (vertex :top :right :rear)))))

 (generate-sample-drawing :object-roots (make-object 'box-view)) @end cartouche 
@end smallexample

